{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_dtranslate_status" id="input-status" class="form-control">
                {% if module_dtranslate_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-api-key">{{ entry_api_key }}</label>
            <div class="col-sm-10">
				<input type="text" name="module_dtranslate_api_key" value="{{ module_dtranslate_api_key }}" placeholder="{{ entry_api_key }}" id="input-api-key" class="form-control" />
				{% if error_key %}
				<div class="text-danger">{{ error_key }}</div>
				{% endif %}
			</div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-formatting">{{ entry_save_formatting }}</label>
            <div class="col-sm-10">
              <select name="module_dtranslate_save_formatting" id="input-formatting" class="form-control">
                {% if module_dtranslate_save_formatting %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-model-type">{{ entry_model_type }}</label>
            <div class="col-sm-10">
              <select name="module_dtranslate_model_type" id="input-model-type" class="form-control">
				{% for key,model_type in model_types %}
					{% if module_dtranslate_model_type == key %}
					<option value="{{ key }}" selected="selected">{{ model_type }}</option>
					{% else %}
					<option value="{{ key }}">{{ model_type }}</option>
					{% endif %}
				{% endfor %}
              </select>
            </div>
          </div>
		  <div class="alert alert-info">{{ help_model_1 }} {{ help_model_2 }} {{ help_model_3 }}</div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}